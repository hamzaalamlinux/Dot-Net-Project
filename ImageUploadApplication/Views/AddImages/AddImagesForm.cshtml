
@model  IEnumerable<ImageUploadApplication.Helper.Users>
<style>
    .modify_img {
        height: 213px;
        width: 320px;
    }
</style>

<div class="container py-5">

    <!-- For demo purpose -->
    <header class="text-white text-center">
        <h1 class="display-4"> image upload</h1>


        <img src="https://bootstrapious.com/i/snippets/sn-img-upload/image.svg" alt="" width="150" class="mb-4">
    </header>


    <div class="row py-4 justify-content-center">
        <div class="col-lg-6 mx-auto">
            <form action="@Url.Action("SaveImages")" method="post" enctype="multipart/form-data">
                <!-- Upload image input-->
                <div class="input-group mb-3 px-2 py-2">
                   <select id="userid" class="form-control">
                    <option value=" ">Select Users</option>
                    @foreach (var item in Model.ToList()) {
                        <option value="@item.id">@item.username</option>
                   }</select>
                </div>
                <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                    <input id="upload" multiple type="file" name="file" class="form-control border-0 gallery-photo-add">
                    <label id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                    <div class="input-group-append">
                        <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                    </div>
                </div>
                @*<input type="button" class=" text-uppercase font-weight-bold text-muted"  value="Submit" />*@
                <button type="button" class="btn  bg-white text-dark border-0 rounded-pill text-uppercase font-weight-bold text-muted" id="submit_images">
                    Submit
                </button>
            </form>
            <!-- Uploaded image area-->
            <p class="font-italic text-white text-center">The image uploaded will be rendered inside the box below.</p>


        </div>
    </div>

</div>
<div class="row" id="images">


</div>